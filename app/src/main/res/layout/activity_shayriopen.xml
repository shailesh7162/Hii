<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shayriopen"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="405.60dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/Zoom_button"
            android:background="@drawable/extend_buttton"
            android:layout_marginLeft="65dp"/>

        <Button
            android:layout_width="58.50dp"
            android:layout_height="61.10dp"
            android:id="@+id/Color_change_button"
            android:background="@drawable/thems_bottun"
            android:layout_marginLeft="136.50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Shayri_open_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAlignment="center"
                android:hint="text"
                android:textSize="19.50dp"

                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"

        >

        <Button
            android:id="@+id/Copy_button"
            android:layout_width="58.50dp"
            android:layout_height="58.50dp"
            android:layout_marginStart="10.40dp"
            android:layout_marginTop="10.40dp"
            android:layout_marginEnd="10.40dp"
            android:layout_marginBottom="10.40dp"
            android:background="@drawable/copy" />

        <Button
            android:id="@+id/Left_button"
            android:layout_width="58.50dp"
            android:layout_height="58.50dp"
            android:layout_marginStart="10.40dp"
            android:layout_marginTop="10.40dp"
            android:layout_marginEnd="10.40dp"
            android:layout_marginBottom="10.40dp"
            android:layout_toRightOf="@id/Copy_button"
            android:background="@drawable/back" />
        <Button
            android:layout_width="58.50dp"
            android:layout_height="58.50dp"
            android:id="@+id/Edit_button"
            android:background="@drawable/edit_icon"
            android:layout_margin="10.40dp"
            android:layout_toRightOf="@id/Left_button"/>

        <Button
            android:id="@+id/Right_button"
            android:layout_width="58.50dp"
            android:layout_height="58.50dp"
            android:layout_marginStart="10.40dp"
            android:layout_marginTop="10.40dp"
            android:layout_marginEnd="10.40dp"
            android:layout_marginBottom="10.40dp"
            android:layout_toRightOf="@id/Edit_button"
            android:background="@drawable/next" />
        <Button
            android:layout_width="78dp"
            android:layout_height="65dp"
            android:id="@+id/Share_button"
            android:background="@drawable/share"
            android:layout_margin="7.80dp"
            android:layout_toRightOf="@id/Right_button"/>

    </RelativeLayout>
</LinearLayout>